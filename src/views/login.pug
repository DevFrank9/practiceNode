extends base.pug


block content
    if errorMessage 
        span=errorMessage 
    form(method="POST")
        input(name="username", type="text", required, placeholder="username") 
        input(name="password", type="password", required, placeholder="password") 
        input(type="submit", value="Log In")
        br
        a(href="https://github.com/login/oauth/authorize?client_id=4c7df9eb2963b093a78f&allow_singup=false") Continue with Github &rarr;
    hr
    div 
        span Don't have an account? 
        a(href="/join") Create Account now! &rarr;